<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "ludinlogo.png" %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <%= simple_form_for :search, url: gamenights_path, method: :get do |f| %>
        <div class="search-form-control loupe-nav form-group">
          <input class="form-control string required" type="text" name="query" id="search_query" placeholder="affiner votre recherche" />
          <button name="button" type="submit" class="btn btn-flat white-loupe">
            <i class="fas fa-search recherche"></i>
          </button>
        </div>
      <% end %>
        <li class="nav-item active">
          <%= link_to "Soirées", gamenights_path, class: "nav-link", :style=>'color: white;' %>
        </li>
        <li class="nav-item dropdown">
          <% if participation.gamenight.boardgame.user.photo.attached? %>
          <%= cl_image_tag participation.gamenight.boardgame.user.photo.key, crop: :fill, class: "avatar1" %>
          <% else %>
          <%= image_tag "avatar.jpg", crop: :fill, class: "avatar1" %>
          <% end %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Uikit", uikit_path, class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Me connecter", new_user_session_path, class: "nav-link", :style=>'color: white;' %>
        </li>
        <li>
          <%= link_to "Créer un compte", new_user_registration_path, class: "nav-link", :style=>'color: white;' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
