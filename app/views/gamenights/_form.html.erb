<%= simple_form_for(gamenight) do |f| %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :start_time, as: :time %>
  <%= f.input :end_time, as: :time %>
  <%= f.input :description, as: :text %>
  <%= f.input :location_id, :collection => @locations_user %>
  <%= f.input :boardgame_id, :collection => @boardgames_user %>
  <%= f.submit "Créer votre soirée" %>
<% end %>
