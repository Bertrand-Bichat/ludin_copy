<h1>View index gamenights</h1>

<% @gamenights.each do |gamenight| %>
  <% if (gamenight.date >= Time.now.to_date) && (gamenight.start_time.hour - 2 > Time.now.hour) %>
    <p>Le <%= gamenight.date %>, <%= gamenight.start_time.strftime("de %H:%M") %> <%= gamenight.end_time.strftime("Ã  %H:%M") %></p>
    <p>au <%= gamenight.location.address %></p>
    <p>avec le jeu <%= gamenight.boardgame.name %></p>
    <p><%= link_to "Voir plus...", gamenight_path(gamenight) %></p>
  <% end %>
<% end %>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
