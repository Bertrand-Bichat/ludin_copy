<div class="container w-100 mt-3 mb-3">
  <div class="row row-design">
    <div class="card-big col-6">
      <div class="card-img">
        <img src="http://unsplash.it/200/120/?random" alt="" class="gamenight-show-image">
        <img class="avatar3" id="show-gamenight" alt="avatar1" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" />
      </div>
    </div>
    <div class="games-specs col-6">
      <div class="row d-flex justify-content-between offset-4">
        <h2 class="gamename"><%= @boardgame.name %></h2>
        <h6 class="username"><%= @user.username.capitalize %>'s GameNight</h6>
        <h6 class="joueurs"><%= @boardgame.players_min %> - <%= @boardgame.players_max %> joueurs</h6>
      </div>
      <div class="description">
        <p>Description : <br> <%= @boardgame.description.capitalize %></p>
        <div class="button3 d-flex offset-9"><% if (@gamenight.date > Time.now.to_date) && (@boardgame.players_max > @participations.size)  %>
          <%= link_to 'Participer', gamenight_participations_path(@gamenight), method: :post, data: { confirm: "Participation prise en compte"} %>
            <% elsif @gamenight.date < Time.now.to_date %>
              <p><strong>Participations closes</strong></p>
            <% elsif (@gamenight.date == Time.now.to_date) && (@gamenight.start_time.hour - 2 >= Time.now.hour) && (@boardgame.players_max > @participations.size) %>
              <%= link_to 'Participer', gamenight_participations_path(@gamenight), method: :post, data: { confirm: "Participation prise en compte"} %>
            <% else %>
              <p><strong>Participations closes</strong></p>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

